@model FilmModel;
@{
    bool isCreate = ViewBag.Creation ?? false;
}

<h2>@(isCreate ? "Create" : "Edit")  Film</h2>

<form class="row g-3" asp-action="@(isCreate ? "Create" : "Edit")" method="post">
    <div class="col-md-12">
        <label asp-for=Name class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter film name">
        <span asp-validation-for=Name class="small text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for=Year class="form-label">Year</label>
        <div class="input-group mb-3">
            <input asp-for=Year type="number" min="1900" step="1" class="form-control" placeholder="Enter film year">
        </div>
        <span asp-validation-for=Year class="small text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for=Raiting class="form-label">Rating</label>
        <div class="input-group mb-3">
            <input asp-for=Raiting type="number" min="0" max="10" step="0.1" class="form-control" placeholder="Enter film rating">
        </div>
        <span asp-validation-for=Raiting class="small text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CategoryId" for="inputState" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" id="inputState" class="form-select"></select>
        <span asp-validation-for=CategoryId class="small text-danger"></span>
    </div>
    <div class="col-md-8">
        <label asp-for=ImageUrl for="inputEmail4" class="form-label">Image URL</label>
        <input asp-for=ImageUrl type="url" class="form-control" placeholder="Enter product image address">
        <span asp-validation-for=ImageUrl class="small text-danger"></span>
    </div>

    <div class="col-md-12 mb-3">
        <label asp-for=Description for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea asp-for=Description class="form-control" id="exampleFormControlTextarea1" placeholder="Enter product description" rows="3"></textarea>
        <span asp-validation-for=Description class="small text-danger"></span>
    </div>



    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Go Back</a>
    </div>
    <div class="col-6">
        @if(isCreate)
        {
            <button type="submit" class="btn btn-success w-100">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-warning w-100">Edit</button>
        }
    </div>
</form>