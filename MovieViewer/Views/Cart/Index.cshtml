@model List<FilmCardModel>
@{
    bool isEmpty = !Model.Any();
}

<div class="card text-center">
    <div class="card-header bg-primary text-light">
        <h5 class="m-0">My View List</h5>
    </div>
    <div class="card-body">

        @if (isEmpty)
        {
            <p class="text-muted">Your cart is empty</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1 d-flex align-items-center">
                            <img src="@item.ImageUrl" class="me-3" style="max-height: 50px;" alt="@item.Name" />
                            <div>
                                <h6 class="mb-0">@item.Name</h6>
                                <p class="mb-0 text-muted">@item.CategoryName</p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </li>
                }
            </ul>

            <div class="text-end mt-3">
                <a asp-action="Clear" class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-trash"></i>
                    <span>Clear Cart</span>
                </a>
            </div>
        }

        <a asp-controller="Home" class="btn btn-sm btn-outline-primary mt-3">Continue Watching</a>
    </div>
</div>